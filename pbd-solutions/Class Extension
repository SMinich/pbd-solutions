class Animal {
  String name;
  int age;
  String sex;
  String color;
  
  public String eat() {
    return "yumm, i love eating";
  }
}

// "extends" tells Java you want to inherit all capabilities of the base class
class Dog extends Animal {    
  String breed;
  public String bark() {
    return "woof";
  }
}

class Cat extends Animal {    
  String breed;
  public String meow() {
    return "meow";
  }
}

class Fish extends Animal {    
  String species;
  String waterType;
  public String blub() {
    return "blub";
  }
}

class Ferret extends Animal {    
  public String ferretSound() {
    return "ferretSound";
  }
}

public class Main {
  public static void main(String[] args) {
    Dog d1 = new Dog();
    d1.name = "Fluffy";
    d1.breed = "Bulldog";
    System.out.println(d1.eat());     // from the baseclass (Animal)
    System.out.println(d1.bark());    // from the Dog class
  }
}
